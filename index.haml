    -# ==========================================================================

    -# jQuery

    %script{:src => "//code.jquery.com/jquery-1.10.2.min.js"}
    :javascript
      window.jQuery || document.write('<script src="js/jquery-1.10.2.min.js"><\/script>')

    -# Custom JS

